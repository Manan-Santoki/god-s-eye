# ═══════════════════════════════════════════════════════════════
# GOD_EYE — Environment Configuration Template
# Copy to .env and fill in your values:  cp .env.example .env
#
# SECURITY: Never commit .env to version control.
#           All keys marked (required) must be set for that module.
#           Modules without keys are auto-skipped (never crash).
# ═══════════════════════════════════════════════════════════════

# ── Application ─────────────────────────────────────────────────
APP_ENV=development                     # development | production
LOG_LEVEL=INFO                          # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=text                         # json | text
API_PORT=8000
DATA_DIR=./data
DATA_RETENTION_DAYS=90
MAX_CONCURRENT_MODULES=10
MAX_CONCURRENT_BROWSERS=3
REQUEST_TIMEOUT_SECONDS=30
RESPECT_ROBOTS_TXT=true
AUDIT_LOG_ENABLED=true
CONSENT_REQUIRED=true                   # Show consent banner on first run

# ── Infrastructure ───────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=god_eye_password
REDIS_URL=redis://localhost:6379

# ── VPN / Gluetun ───────────────────────────────────────────────
# Docs: https://github.com/qdm12/gluetun/wiki
VPN_ENABLED=false
VPN_PROVIDER=nordvpn                    # nordvpn | expressvpn | protonvpn | mullvad | surfshark | privateinternetaccess | windscribe | ipvanish
VPN_TYPE=wireguard                      # wireguard | openvpn
WIREGUARD_PRIVATE_KEY=                  # WireGuard private key (if VPN_TYPE=wireguard)
WIREGUARD_ADDRESSES=                    # WireGuard address (e.g. 10.5.0.2/32)
VPN_USERNAME=                           # OpenVPN username
VPN_PASSWORD=                           # OpenVPN password
VPN_COUNTRIES=United States             # Target VPN server country
VPN_CITIES=                             # Optional: specific city
GLUETUN_INCOMING_PORTS=                 # Optional: port forwarding

# ── Email Intelligence APIs ──────────────────────────────────────
# Have I Been Pwned — https://haveibeenpwned.com/API/Key
# Free API key + $3.50/month for unlimited rate
HIBP_API_KEY=

# Hunter.io — https://hunter.io (free: 25/month)
HUNTER_IO_API_KEY=

# DeHashed — https://dehashed.com ($0.01/query)
DEHASHED_EMAIL=                         # Your DeHashed account email
DEHASHED_API_KEY=

# EmailRep — https://emailrep.io (free tier available)
EMAILREP_API_KEY=

# Intelligence X — https://intelx.io (free tier: limited)
INTELX_API_KEY=

# ── Search Engine APIs ────────────────────────────────────────────
# Google Custom Search — https://console.cloud.google.com/
# Free: 100 queries/day
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ENGINE_ID=                   # https://programmablesearchengine.google.com/

# Bing Web Search — https://azure.microsoft.com/en-us/services/cognitive-services/bing-web-search-api/
# Free: 1000 transactions/month
BING_API_KEY=

# Shodan — https://account.shodan.io/ ($59 lifetime membership)
SHODAN_API_KEY=

# VirusTotal — https://www.virustotal.com/gui/my-apikey
# Free: 4 req/min, 500/day
VIRUSTOTAL_API_KEY=

# ── Social Media APIs ──────────────────────────────────────────────
# GitHub Personal Access Token — https://github.com/settings/tokens
# Free: no expiry needed, read-only scopes sufficient
GITHUB_TOKEN=

# Twitter/X Bearer Token — https://developer.twitter.com/
# Free tier: 1500 tweets/month read
TWITTER_BEARER_TOKEN=

# Reddit App Credentials — https://www.reddit.com/prefs/apps
# Free: 60 req/min
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=GOD_EYE/1.0 by YourUsername

# YouTube Data API v3 — https://console.cloud.google.com/
# Free: 10,000 units/day
YOUTUBE_API_KEY=

# ── Domain & Network APIs ──────────────────────────────────────────
# WhoisXML API — https://www.whoisxmlapi.com/
# Free: 500 credits/month
WHOISXML_API_KEY=

# SecurityTrails — https://securitytrails.com/
# Free: 50 API calls/month
SECURITYTRAILS_API_KEY=

# IPinfo — https://ipinfo.io/account/token
# Free: 50,000 req/month
IPINFO_TOKEN=

# AbuseIPDB — https://www.abuseipdb.com/account/api
# Free: 1000 req/day
ABUSEIPDB_API_KEY=

# Censys — https://censys.io/register
# Free: 250 queries/month
CENSYS_API_ID=
CENSYS_API_SECRET=

# ── Phone Intelligence ─────────────────────────────────────────────
# Numverify — https://numverify.com/
# Free: 100 req/month
NUMVERIFY_API_KEY=

# Twilio Lookup — https://www.twilio.com/
# $0.005 per lookup
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ── Image Intelligence ─────────────────────────────────────────────
# TinEye — https://services.tineye.com/ ($200/year for 5000 searches)
TINEYE_API_KEY=

# Google Cloud Vision — https://console.cloud.google.com/
# Free: 1000 units/month
GOOGLE_VISION_API_KEY=

# ── Business Intelligence ──────────────────────────────────────────
# OpenCorporates — https://opencorporates.com/api_accounts/new
# Free: 500 req/month
OPENCORPORATES_API_TOKEN=

# Clearbit — https://clearbit.com/
CLEARBIT_API_KEY=

# ── Browser Automation Credentials ────────────────────────────────
# WARNING: Use dedicated research accounts, NEVER your personal accounts.
#          These accounts may get flagged or banned.
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

FACEBOOK_EMAIL=
FACEBOOK_PASSWORD=

TIKTOK_SESSION_ID=                      # TikTok sessionid cookie value

# ── Proxy Configuration ────────────────────────────────────────────
# If VPN_ENABLED=true, the VPN is used preferentially.
# These proxies supplement or replace VPN for module-level rotation.
USE_PROXY=false
PROXY_LIST_FILE=proxies.txt             # One proxy per line: protocol://user:pass@host:port
PROXY_ROTATION_STRATEGY=round_robin    # round_robin | random | least_used

# TOR Integration (requires local TOR service)
TOR_ENABLED=false
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=                           # Set in /etc/tor/torrc with HashedControlPassword

# ── AI Configuration ───────────────────────────────────────────────
AI_PROVIDER=anthropic                   # anthropic | openai | ollama
ANTHROPIC_API_KEY=                      # https://console.anthropic.com/
OPENAI_API_KEY=                         # https://platform.openai.com/api-keys
OLLAMA_ENDPOINT=http://localhost:11434  # Self-hosted Ollama
OLLAMA_MODEL=llama3                     # llama3 | mistral | mixtral
AI_MODEL=claude-sonnet-4-20250514       # Claude model ID
AI_MAX_TOKENS=4000
ENABLE_AI_CORRELATION=true
ENABLE_AI_REPORTS=true
